	 <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource">
			<ref bean="dataSource-druid" />
		</property>
	</bean>
	
	
	<bean id="dataSource-druid" class="org.springframework.jndi.JndiObjectFactoryBean">
    	<property name="jndiName">
        	<value>java:comp/env/jdbc/staffApp</value>
    	</property>
	</bean>
	
	<!-- myBatis配置 -->
	<bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource-druid" />
		<property name="typeAliasesPackage" value="com.none.web.po" />
		<property name="mapperLocations" value="classpath:/mybatis/*Mapper.xml" />
	</bean>
	
	<bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
		<property name="basePackage" value="com.none.web.dao"/>
	</bean>

</beans>
